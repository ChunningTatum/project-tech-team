<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./partials/head.ejs') %>
</head>

<body class="container">

  <header>
    <%- include ('./partials/header.ejs') %>
  </header>

  <main>

    <section id="bgLogin">

      <div class="box-login">

        <img src="../static/img/logo.png">

        <h1> Registreren</h1>

        <form action="/users/registreren" method="POST">


          <input type="name" id="name" name="name" class="form-control" placeholder="Naam"
            value="<%= typeof name != 'undefined' ? name : '' %>" />

          <input type="email" id="email" name="email" class="form-control" placeholder="Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />

          <input type="password" id="password" name="password" class="form-control" placeholder="Wachtwoord"
            value="<%= typeof password != 'undefined' ? password : '' %>" />

          <input type="password" id="password2" name="password2" class="form-control" placeholder="Herhaal Wachtwoord"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />

          <button type="submit">Register</button>

        </form>

        <div class="box-secondary">
          <p>Al een account?</p>
          <button><a href="/login">Login</a></button>
        </div>

      </div>

    </section>
  </main>

</body>

</html>
