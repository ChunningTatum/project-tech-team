<%- include ('partials/head.ejs') %>

<body class="container">

  <%- include ('partials/header.ejs') %>

  <main>

    <section id="main">
      <h1>Edit profile</h1>
    </section>

    <section class="formContainer">

      <article>
        <form action="/edit-profile" method="POST">

          <fieldset class="flexForm">

            <label>What is your name?
              <input type="text" name="name" required>
            </label>

            <label>What is your pickup line?
              <input type="text" name="pickupText">
            </label>

            <label>If you can't think about one, you can choose for a random one
              <input type="checkbox" name="pickupBox">
            </label>

            <label class="uploadContainer">Upload your profile picture
              <input class="uploadInput" type="file" name="picture">
            </label>

            <button type="submit" class="saveButton">Save</button>
          </fieldset>

        </form>

        <div class="cancelContainer">
          <a href="/profile" class="cancelButton">Cancel</a>
        </div>

      </article>

    </section>

  </main>

  <footer>
    <%- include ('partials/footer.ejs') %>
  </footer>

</body>

</html>
